<p id="notice"><%= notice %></p>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
    <%= link_to 'Edit', edit_garden_path(@garden), class: 'btn btn-primary' %> |
    <%= link_to 'Back', gardens_path, class: 'btn btn-primary' %> |
    <%= link_to 'Add a Plant', new_garden_plant_path(@garden), class: 'btn btn-primary' %>
  </div>
</div>

<div class="container">

  <h3>Plants</h3>

  <% plants = @garden.plants %>
  <ul>
    <% plants.each do |plant| %>
      <li class='card'>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.picture_url %>)">
          <%= plant.name %>
          <%= link_to "âŒ", plant_path(plant.id), method: :delete %>
        </div>

      </li>
    <% end %>
  </ul>

</div>

<style>

.card-category {
  background-size: cover;
  background-position: center;
  height: 180px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 24px;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  border-radius: 5px;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
}


</style>