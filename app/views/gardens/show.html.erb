<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @garden.name %>
</p>

<p>
  <strong>Banner url:</strong>
  <%= @garden.banner_url %>
</p>

<%= link_to 'Edit', edit_garden_path(@garden) %> |
<%= link_to 'Back', gardens_path %> |
<%= link_to 'Add a Plant', new_garden_plant_path(@garden) %>

<h3>Plants</h3>

<% plants = @garden.plants %>
<ul>
  <% plants.each do |plant| %>
    <li>
      <p>
        <%= plant.name %>
        <%= link_to "❌", plant_path(plant.id), method: :delete %>
      </p>
      <img src="<%= plant.picture_url %>" alt="">
    </li>
  <% end %>
</ul>