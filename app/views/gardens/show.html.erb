<p id="notice"><%= notice %></p>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
    <%= link_to 'Edit', edit_garden_path(@garden), class: 'btn btn-primary' %> |
    <%= link_to 'Back', gardens_path, class: 'btn btn-primary' %> |
    <%= link_to 'Add a Plant', new_garden_plant_path(@garden), class: 'btn btn-primary' %>
  </div>
</div>

<div class="container">

  <h3>Plants</h3>

  <% plants = @garden.plants %>
  <ul>
    <% plants.each do |plant| %>
      <li>
        <p>
          <%= plant.name %>
          <%= link_to "❌", plant_path(plant.id), method: :delete %>
        </p>
        <img src="<%= plant.picture_url %>" alt="">
      </li>
    <% end %>
  </ul>

</div>